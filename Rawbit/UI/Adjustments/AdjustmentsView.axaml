<UserControl
    x:Class="Rawbit.UI.Adjustments.AdjustmentsView"
    x:DataType="viewModels1:AdjustmentsViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels1="clr-namespace:Rawbit.UI.Adjustments.ViewModels"
    xmlns:controls="clr-namespace:Rawbit.UI.Adjustments.Controls">
    <Grid RowDefinitions="*, 110">
        <Grid ColumnDefinitions="*, 300" Grid.Row="0">
            <Grid Background="{StaticResource BrushCanvas}" Grid.Column="0">
                <controls:RawPreviewControl
                    ClipToBounds="True"
                    HorizontalAlignment="Stretch"
                    IsVisible="{Binding IsRawLoaded}"
                    VerticalAlignment="Stretch"
                    ViewModel="{Binding}" />
                <Border
                    Background="{StaticResource BrushPanel}"
                    BorderBrush="{StaticResource BrushBorder}"
                    BorderThickness="1"
                    CornerRadius="6"
                    HorizontalAlignment="Center"
                    IsVisible="{Binding IsBusy}"
                    Padding="5"
                    VerticalAlignment="Center">
                    <ProgressBar
                        Height="5"
                        IsIndeterminate="True"
                        IsVisible="{Binding IsBusy}"
                        VerticalAlignment="Center"
                        Width="240"
                        ZIndex="10" />
                </Border>
            </Grid>
            <Border
                Background="{DynamicResource BrushPanel}"
                BorderBrush="{DynamicResource BrushPanelBorder}"
                BorderThickness="0,0,1,0"
                Grid.Column="1"
                Padding="6">
                <TabControl>
                    <TabItem>
                        <TabItem.Header>
                            <Border Padding="0">
                                <Path
                                    Data="M2,14 L12,4 L14,6 L4,16 Z M2,14 L2,16 L4,16 Z"
                                    Fill="{DynamicResource BrushTextPrimary}"
                                    Height="16"
                                    Stretch="Uniform"
                                    Width="16" />
                            </Border>
                        </TabItem.Header>
                        <ScrollViewer
                            HorizontalScrollBarVisibility="Disabled"
                            Padding="0,0,20,0"
                            VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <controls:WhiteBalanceControl DataContext="{Binding WhiteBalance}" />
                                <controls:LightAdjustmentsControl DataContext="{Binding LightAdjustments}" />
                                <Border
                                    Background="{DynamicResource BrushPanelBright}"
                                    BorderBrush="{DynamicResource BrushPanelBorder}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="0,10,0,0"
                                    Padding="4">
                                    <StackPanel Spacing="6">
                                        <TextBlock
                                            Classes="muted"
                                            FontWeight="Bold"
                                            Text="Tone Curve" />

                                        <controls:CurveEditor
                                            Height="230"
                                            Points="{Binding ToneCurveAdjustment.Points}" />
                                    </StackPanel>
                                </Border>

                                <controls:HslAdjustmentsControl DataContext="{Binding HslAdjustments}" />
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <Border Padding="6">
                                <Grid Height="16" Width="16">
                                    <Ellipse
                                        Stroke="{DynamicResource BrushTextPrimary}"
                                        StrokeThickness="1.5" />
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="Bold"
                                        HorizontalAlignment="Center"
                                        Text="?"
                                        VerticalAlignment="Center" />
                                </Grid>
                            </Border>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <Border Padding="6">
                                <Grid Height="16" Width="16">
                                    <Border
                                        BorderBrush="{DynamicResource BrushTextPrimary}"
                                        BorderThickness="1.5"
                                        CornerRadius="1" />
                                    <Rectangle
                                        Fill="{DynamicResource BrushTextPrimary}"
                                        Height="4"
                                        HorizontalAlignment="Center"
                                        Margin="0,2,0,0"
                                        VerticalAlignment="Top"
                                        Width="8" />
                                    <Rectangle
                                        Stroke="{DynamicResource BrushTextPrimary}"
                                        StrokeThickness="1.2"
                                        Height="5"
                                        HorizontalAlignment="Left"
                                        Margin="2,7,0,0"
                                        VerticalAlignment="Top"
                                        Width="5" />
                                </Grid>
                            </Border>
                        </TabItem.Header>
                        <controls:ExportControl DataContext="{Binding Export}" />
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
        <ListBox
            x:Name="ThumbnailsList"
            Background="{StaticResource BrushBackground}"
            Grid.Row="1"
            ItemsSource="{Binding FolderThumbnails}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            SelectedItem="{Binding SelectedImage}"
            SelectionMode="Single">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel
                        Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image
                        Height="80"
                        Source="{Binding Bitmap}"
                        Width="100" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>

</UserControl>