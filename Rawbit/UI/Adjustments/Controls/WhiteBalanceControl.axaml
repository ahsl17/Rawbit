<UserControl
    x:Class="Rawbit.UI.Adjustments.Controls.WhiteBalanceControl"
    x:DataType="viewModels1:WhiteBalanceViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels1="clr-namespace:Rawbit.UI.Adjustments.ViewModels">
    <Border
        Background="{DynamicResource BrushPanelBright}"
        BorderBrush="{DynamicResource BrushPanelBorder}"
        BorderThickness="1"
        CornerRadius="8"
        Margin="0,10,0,0"
        Grid.Row="0"
        Padding="8">
        <StackPanel Spacing="6">
            <TextBlock
                Classes="muted"
                FontWeight="Bold"
                Margin="0,0,0,5"
                Text="White Balance" />

            <StackPanel>
                <DockPanel Margin="0,0,0,-4">
                    <TextBlock FontSize="12" Text="Temperature" />
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource BrushAccent}"
                        HorizontalAlignment="Right"
                        Text="{Binding TemperatureValue, StringFormat={}{0:F2}}" />
                </DockPanel>
                <Slider
                    Classes="thin"
                    Maximum="1"
                    Minimum="-1"
                    Value="{Binding TemperatureValue}" />
            </StackPanel>

            <StackPanel>
                <DockPanel Margin="0,0,0,-4">
                    <TextBlock FontSize="12" Text="Tint" />
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource BrushAccent}"
                        HorizontalAlignment="Right"
                        Text="{Binding TintValue, StringFormat={}{0:F2}}" />
                </DockPanel>
                <Slider
                    Classes="thin"
                    Maximum="1"
                    Minimum="-1"
                    Value="{Binding TintValue}" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>