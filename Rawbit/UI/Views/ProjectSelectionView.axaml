<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Rawbit.UI.Views.ProjectSelectionView"
    x:DataType="viewModels:ProjectSelectionViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Rawbit.UI.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid ColumnDefinitions="*,*" VerticalAlignment="Center">
        <Button
            Command="{Binding OpenExistingProjectCommand}"
            Content="Open project"
            FontSize="25"
            Grid.Column="0"
            Height="100"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Width="250" />
        <Button
            Command="{Binding CreateNewProjectCommand}"
            Content="New  project"
            FontSize="25"
            Grid.Column="1"
            Height="100"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Width="250" />
    </Grid>
</UserControl>