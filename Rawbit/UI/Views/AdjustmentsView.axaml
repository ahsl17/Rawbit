<UserControl
    x:Class="Rawbit.UI.Views.AdjustmentsView"
    x:DataType="viewModels:AdjustmentsViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:Rawbit.UI.Views.Controls"
    xmlns:viewModels="clr-namespace:Rawbit.UI.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid RowDefinitions="*, 110">
        <Grid ColumnDefinitions="*, 300" Grid.Row="0">
            <Grid Background="{StaticResource BrushCanvas}" Grid.Column="0">
                <controls:RawPreviewControl
                    ClipToBounds="True"
                    HorizontalAlignment="Stretch"
                    IsVisible="{Binding IsRawLoaded}"
                    VerticalAlignment="Stretch"
                    ViewModel="{Binding}" />
                <Border
                    Background="{StaticResource BrushPanel}"
                    BorderBrush="{StaticResource BrushBorder}"
                    BorderThickness="1"
                    CornerRadius="6"
                    HorizontalAlignment="Center"
                    IsVisible="{Binding IsBusy}"
                    Padding="5"
                    VerticalAlignment="Center">
                    <ProgressBar
                        Height="5"
                        IsIndeterminate="True"
                        IsVisible="{Binding IsBusy}"
                        VerticalAlignment="Center"
                        Width="240"
                        ZIndex="10" />
                </Border>
            </Grid>
            <Border
                Background="{DynamicResource BrushPanel}"
                BorderBrush="{DynamicResource BrushBorder}"
                BorderThickness="0,0,1,0"
                Grid.Column="1"
                Padding="20">

                <StackPanel Spacing="25">
                    <TextBlock Classes="section" Text="IMAGE ADJUSTMENTS" />

                    <StackPanel Spacing="12">
                        <TextBlock
                            Classes="muted"
                            FontWeight="Bold"
                            Margin="0,0,0,5"
                            Text="LIGHT" />

                        <StackPanel>
                            <DockPanel Margin="0,0,0,-4">
                                <TextBlock FontSize="12" Text="Exposure" />
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource BrushAccent}"
                                    HorizontalAlignment="Right"
                                    Text="{Binding ExposureValue, StringFormat={}{0:F2}}" />
                            </DockPanel>
                            <Slider
                                Classes="thin"
                                Maximum="5"
                                Minimum="-5"
                                Value="{Binding ExposureValue}" />
                        </StackPanel>

                        <StackPanel>
                            <DockPanel Margin="0,0,0,-4">
                                <TextBlock FontSize="12" Text="Shadows" />
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource BrushAccent}"
                                    HorizontalAlignment="Right"
                                    Text="{Binding ShadowsValue, StringFormat={}{0:F2}}" />
                            </DockPanel>
                            <Slider
                                Classes="thin"
                                Maximum="1"
                                Minimum="-1"
                                Value="{Binding ShadowsValue}" />
                        </StackPanel>

                        <StackPanel>
                            <DockPanel Margin="0,0,0,-4">
                                <TextBlock FontSize="12" Text="Highlights" />
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource BrushAccent}"
                                    HorizontalAlignment="Right"
                                    Text="{Binding HighlightsValue, StringFormat={}{0:F2}}" />
                            </DockPanel>
                            <Slider
                                Classes="thin"
                                Maximum="10"
                                Minimum="-10"
                                Value="{Binding HighlightsValue}" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Spacing="10">
                        <TextBlock
                            Classes="muted"
                            FontWeight="Bold"
                            Margin="0,6,0,2"
                            Text="TONE CURVE" />
                        <controls:CurveEditor Height="250" Points="{Binding CurvePoints}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        <ListBox
            Background="{StaticResource BrushBackground}"
            Grid.Row="1"
            ItemsSource="{Binding FolderThumbnails}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            SelectedItem="{Binding SelectedImage}"
            SelectionMode="Single">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image
                        Height="80"
                        Source="{Binding Bitmap}"
                        Width="100" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>

</UserControl>
